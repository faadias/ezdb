{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "module": "none",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es6",
    "watch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
	  "src"
  ],
  "exclude": [
	  "bin"
  ],
  "compileOnSave": true
}

